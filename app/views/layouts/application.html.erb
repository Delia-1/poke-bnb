  <body class="bg-white">
    <%= render "components/navbar" %>
    <div class="mt-3 mb-3">
      <div class="container bg-danger border border-4 border-warning rounded-4 p-3" style="height: 100%;">
        <%= yield %>
      </div>
    </div>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76A8z8X6iOk6E9iV+HIjCp/fvGYW+0J8Hh99p6tqVQ+uV4F8hzH9vF7Y4N8hlU2" crossorigin="anonymous"></script>
  </body>
</html>
