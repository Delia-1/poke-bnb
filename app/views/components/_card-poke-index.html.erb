
<div class="cardgrids">

  <% pokemons.each do |pokemon| %>
    <%= link_to pokemon_path(pokemon) do %>
      <div class="card-product">
        <% if pokemon.image_url.present? %>
          <%= cl_image_tag pokemon.image_url %>
        <% end %>
        <div class="card-product-infos">
          <h3 class="card-title paragraph-title"><%= pokemon.name %></h3>
          <p><strong>Level:</strong> <%= pokemon.level %></p>
          <p><strong>Booking price per day:</strong> <%= pokemon.price_per_day %> $</p>
        </div>
      </div>
      <% end %>
  <% end %>
</div>
